    <dbms>mysql</dbms>
    <db-username>codesearch_db</db-username>
    <db-password>dota!123</db-password>
    <db-driver>org.gjt.mm.mysql.Driver</db-driver>
    <db-url>localhost</db-url>
    <db-port-number>3306</db-port-number>
    <db-name>codesearch</db-name>
    <db-max-connections>100</db-max-connections>
    
    <global-blacklist-filenames>
        <filename>*.jpg</filename>
        <filename>*.txt</filename>
        <filename>*img*</filename>
        <filename>*.svn*</filename>
        <filename>*.class*</filename>
    </global-blacklist-filenames>
    <index-location>/tmp/test</index-location>
    <index-jobs>
       <index-job>
            <tasks>
                <task>
                    <type>clear</type>
                </task>
            </tasks>			
        </index-job>
        <index-job>
            <repositories>svnsearch_repo</repositories>
            <tasks>
                <task>
                    <type>index</type>
                    <enable-code-analysis>true</enable-code-analysis>
                </task>
            </tasks>
        </index-job> 
    </index-jobs>
    <testproperty>fdsa</testproperty>
    <repository-groups>group1 group2</repository-groups>
    <repositories>
        <repository>
            <name>svnsearch_repo</name>
            <version-control-system>SVN</version-control-system>
            <username>feldruebe</username>
            <password>dota!123</password>
            <url>svn://portal.htl-kaindorf.at/svnsearch</url>
            <code-navigation-enabled>true</code-navigation-enabled>
            <blacklist-filenames>
                <filename>*.xml</filename>
            </blacklist-filenames>
            <repository-groups>
                <repo-group>group1</repo-group>
                <repo-group>group2</repo-group>
            </repository-groups>
        </repository>
        <repository>
            <name>svn_local</name>
            <version-control-system>FILESYSTEM</version-control-system>
            <username>null</username>
            <password>null</password>
            <repository-groups>
                <repo-group>group1</repo-group>
            </repository-groups>
            <url>$home/workspace/svnsearch</url>
            <code-navigation-enabled>true</code-navigation-enabled>
        </repository>
    </repositories>
</root>
