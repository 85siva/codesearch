<root>
    <dbms>mysql</dbms>
    <db-username>codesearch</db-username>
    <db-password>dota!123</db-password>
    <db-driver>com.mysql.jdbc.Driver</db-driver>
    <db-url>127.0.0.1</db-url>
    <db-port-number>3306</db-port-number>
    <db-name>codesearch</db-name>
    <db-max-connections>100</db-max-connections>

    <searcher-location>http://127.0.0.1:8080/codesearch/searcher/</searcher-location>

    <global-blacklist-filenames>
        <filename>.*\.svn.*</filename>
        <filename>.*\.class</filename>
        <filename>.*\.o</filename>
        <filename>.*\.bin</filename>
    </global-blacklist-filenames>

    <index-location>/tmp/test/</index-location>
    
    <index-jobs>
        <index-job>
            <repositories>svn_local</repositories>
            <cron-expression>0 * * * * ?</cron-expression>
            <tasks>
                <task>
                    <type>clear</type>
                </task>
                <task>
                    <type>index</type>
                </task>
            </tasks>
        </index-job>
    </index-jobs>
    
    <repository-groups>group1 group2</repository-groups>

    <repositories>
        <repository>
            <name>codesearch_repo</name>
            <version-control-system>BZR</version-control-system>
            <username></username>
            <password></password>
            <url>bzr+ssh://bazaar.launchpad.net/~codesearch-dev/codesearch/trunk/</url>
            <code-navigation-enabled>true</code-navigation-enabled>
            <authentication-data type='basic'>
                <username>asdf</username>
                <password>fdsa</password>
            </authentication-data>
            <blacklist-filenames>
                <filename>.*\.xml</filename>
            </blacklist-filenames>
            <repository-groups>
                <repo-group>group1</repo-group>
            </repository-groups>
        </repository>
        <repository>
            <name>svn_local</name>
            <version-control-system>FILESYSTEM</version-control-system>
            <authentication-data type='ssh'><file-path>/tmp/test</file-path></authentication-data>
            <repository-groups>
                <repo-group>group1</repo-group>
            </repository-groups>
            <blacklist-filenames>
                <filename>.*\.o</filename>
                <filename>.*\.pdf</filename>
                <filename>.*\.bin</filename>
            </blacklist-filenames>
            <url>/home/david/workspace/svnsearch</url>
            <code-navigation-enabled>true</code-navigation-enabled>
        </repository>
    </repositories>
</root>
