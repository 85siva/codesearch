<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>
        .searchForm
        {
            border-style: none none solid none;
            border-width: 1px;
        }
    </ui:style>
    <g:DockLayoutPanel unit='EM'>
        <g:north size='15'>
            <g:FlowPanel styleName='{style.searchForm}'>
                <g:TabLayoutPanel ui:field='repositoryTabPanel' barUnit='EM' barHeight='1.7' height='10em'>
                    <g:tab>
                        <g:header>Repositories</g:header>
                        <g:ListBox ui:field='repositoryList' visibleItemCount='6' multipleSelect='true' width='20em' />
                    </g:tab>
                    <g:tab>
                        <g:header>Repository Groups</g:header>
                        <g:ListBox ui:field='repositoryGroupList' visibleItemCount='6' multipleSelect='true' width='20em' />
                    </g:tab>
                </g:TabLayoutPanel>
                <g:Label text='Search for:' />
                <g:TextBox ui:field='searchBox' />
                <g:Button ui:field='searchButton' text='Search' />
                <g:CheckBox ui:field='caseSensitive' text='Case Sensitive' />
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel>
                <g:FlowPanel ui:field='resultView'>
                    <c:CellTable ui:field='resultTable' />
                    <c:SimplePager ui:field='resultTablePager' />
                </g:FlowPanel>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
