
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
            .sidebar-tree
            {

            }
            
            .title
            {
                font-weight: bold;
                font-size: large;
                border-bottom: 1px dashed  #0081FF;
            }
    </ui:style>
    <g:FlowPanel height="100%">
        <g:Label ui:field="titleLabel" addStyleNames="{style.title}" />
        <g:ScrollPanel ui:field="scrollWrapper"  width="100%" height="100%">
            <g:Tree ui:field="sidebarTree" addStyleNames="{style.sidebar-tree}" />
        </g:ScrollPanel>
    </g:FlowPanel>
</ui:UiBinder>